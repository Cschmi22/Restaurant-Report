@model List<Restaurant_Reports.Models.Domain.Employee>

@{
}

<h1> Employees</h1>
<table class=" table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Department</th>
            <th>Date Of Hire</th>
            <th>Email</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Department</td>
                <td>@employee.DateOfHire.ToString("MM-dd-yyyy")</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td><a href="Employee/View/@employee.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>